	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<definition name="defaultLayout" template="/WEB-INF/views/layouts/default.jsp">
		<put-attribute name="header" value="/WEB-INF/views/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/footer.jsp" />
	</definition>
	<definition name="home.page" extends="defaultLayout">
		<put-attribute name="body" value="/WEB-INF/views/home.jsp" />
	</definition>
	<definition name="login.page" extends="defaultLayout">
		<put-attribute name="body" value="/WEB-INF/views/login.jsp" />
	</definition>
	<definition name="error.page" extends="defaultLayout">
		<put-attribute name="body" value="/WEB-INF/views/default-error.jsp" />
	</definition>
</tiles-definitions>